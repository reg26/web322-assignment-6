    <div class="hero bg-base-200 min-h-screen">
      <div class="hero-content text-center">
        <div class="max-w-2xl">
          <!-- Updated header text -->
          <h1 class="text-4xl font-bold mb-6">Collection</h1>

          <!-- Table with Lego set details -->
          <table
            border="1"
            style="width: 100%; table-layout: fixed; border-collapse: collapse"
          >
            <thead>
              <tr>
                <th style="padding: 15px; font-size: 1.2rem">Set Image</th>
                <th style="padding: 15px; font-size: 1.2rem">Set Name</th>
                <th style="padding: 15px; font-size: 1.2rem">Theme</th>
                <th style="padding: 15px; font-size: 1.2rem">Release Year</th>
                <th style="padding: 15px; font-size: 1.2rem">
                  Number of Parts
                </th>
                <th style="padding: 15px; font-size: 1.2rem">Set Number</th>
              </tr>
            </thead>
            <tbody>
              <% sets.forEach(set => { %>
              <tr>
                <td>
                  <div class="avatar">
                    <div class="w-32 rounded">
                      <img
                        src="<%= set.img_url %>"
                        alt="Lego set image"
                        style="width: 100%"
                      />
                    </div>
                  </div>
                </td>
                <td style="font-size: 1.1rem; padding: 12px"><%= set.name%></td>
                <td style="font-size: 1.1rem; padding: 12px">
                  <a
                    href="/lego/sets?theme=<%= set.Theme.name.toLowerCase() %>"
                    class="btn"
                    style="color: blue"
                  >
                    <%= set.Theme.name %></a
                  >
                </td>
                <td style="font-size: 1.1rem; padding: 12px">
                  <%= set.year %>
                </td>
                <td style="font-size: 1.1rem; padding: 12px">
                  <%= set.num_parts %>
                </td>
                <td style="font-size: 1.1rem; padding: 12px">
                  <a
                    href="/lego/sets/<%= set.set_num %>"
                    class="btn"
                    style="color: blue"
                    ><%= set.set_num %></a
                  >
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
